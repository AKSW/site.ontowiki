$moduleOptions = array(
    'noChrome' => true,
    'template' => 'local/items/feedentry',
    'fallbackFeed' => 'http://blog.aksw.org/feed/'
);
$moduleConfig = new Zend_Config($moduleOptions);
$content = trim($this->module('feeds', $moduleConfig));
